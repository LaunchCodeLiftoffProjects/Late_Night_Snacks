@model IEnumerable<Late_Night_Snacks.Models.Order>

@if (Model.Count() == 0)
{
    <h2>Order not started!</h2>
}

<ul>
    @foreach (var order in Model)
    {
        <li><a asp-controller="Order" asp-action="ViewMenu" asp-route-id="@order.Id">@order.CustomerName</a></li>
    }
</ul>

<p><a asp-controller="Order" asp-action="AddOrder">Start Order</a></p>