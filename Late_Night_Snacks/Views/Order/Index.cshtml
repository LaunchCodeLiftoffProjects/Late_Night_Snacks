@model IEnumerable<Late_Night_Snacks.Models.Order>

<head>
    <style>
        body {
            background-color: dimgrey;
        }

        h1 {
            color: red;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif
        }

        h2 {
            color: red;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif
        }
    </style>

</head>

@if (Model.Count() == 0)
{
    <h2>Order not started!</h2>
}

<ul>
    @foreach (var order in Model)
    {
        <li><a asp-controller="Order" asp-action="ViewMenu" asp-route-id="@order.OrderId">@order.CustomerName</a></li>
    }
</ul>

<p><a asp-controller="Order" asp-action="AddOrder">Start Order</a></p>